{
    "manifest_version": 3,
    "name": "SE Extension",
    "description": "Guarenteed to make your life better!",
    "version": "1.2.0",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "SE Extension",
        "default_icon": "icon.png"
    },
    "options_page": "options.html",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "permissions": [
        "search",
        "tabs",
        "activeTab",
        "storage",
        "identity",
        "identity.email"
    ],
    "host_permissions": [
        "https://cdn-widgetsrepository.yotpo.com/v1/loader/*"
    ]
}